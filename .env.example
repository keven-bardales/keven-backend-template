# Keven Backend Template - Environment Configuration
# Copy this file to .env and update the values for your environment

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=development
PORT=3000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# For Docker Compose setup (recommended):
DB_USER=postgres
DB_PASSWORD=postgres_dev_password_change_in_production
DB_NAME=keven_backend_dev
DB_PORT=5432

# Full DATABASE_URL (automatically constructed in docker-compose):
# This is used when running locally without Docker
DATABASE_URL="postgresql://postgres:postgres_dev_password_change_in_production@localhost:5432/keven_backend_dev"

# ===========================================
# JWT CONFIGURATION
# ===========================================
# Generate secure secrets: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET="your-super-secure-access-secret-at-least-64-characters-long"
JWT_REFRESH_SECRET="your-super-secure-refresh-secret-different-from-access-secret"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ===========================================
# SECURITY SETTINGS
# ===========================================
BCRYPT_SALT_ROUNDS=12

# ===========================================
# SUPER ADMIN CONFIGURATION
# ===========================================
# This user will be created when you run the seed command
SUPER_ADMIN_EMAIL="admin@example.com"

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Add your frontend URLs here
CORS_ORIGINS="http://localhost:3001,http://localhost:4200,http://localhost:5173,http://127.0.0.1:3001"
CORS_CREDENTIALS=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL="debug"

# ===========================================
# API CONFIGURATION
# ===========================================
SWAGGER_ENABLED=true
API_VERSION="v1"

# ===========================================
# REDIS (Optional - for caching and sessions)
# ===========================================
# Uncomment if using Redis locally
# REDIS_URL="redis://localhost:6379"
# REDIS_HOST="localhost"
# REDIS_PORT=6379

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================
HOT_RELOAD=true